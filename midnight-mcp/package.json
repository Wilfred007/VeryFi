{
  "name": "zk-health-pass-midnight-mcp",
  "version": "1.0.0",
  "description": "Midnight MCP Server integration for ZK Health Pass system",
  "main": "dist/stdio-server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "start:mcp": "node dist/stdio-server.js",
    "setup-agent": "tsx scripts/setup-agent.ts",
    "setup-docker": "tsx scripts/setup-docker.ts",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:stdio": "jest --config jest.e2e.config.js --testPathPattern=stdio",
    "test:e2e:eliza": "jest --config jest.e2e.config.js --testPathPattern=eliza",
    "test:e2e:full": "npm run test:e2e",
    "demo:eliza": "tsx scripts/demo-eliza.ts"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "crypto": "^1.0.1",
    "bip39": "^3.1.0",
    "hdkey": "^2.1.0",
    "secp256k1": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^3.12.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "commander": "^11.0.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "midnight",
    "mcp",
    "blockchain",
    "zero-knowledge",
    "health-pass",
    "ai-agent"
  ],
  "author": "ZK Health Pass Team",
  "license": "MIT"
}
